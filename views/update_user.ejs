
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-update">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/home"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- update user form -->
         <!-- form handling -->
 <form method="post" id="update_user">
    <div class="update_user">
        <div class="form-group">
            <label for="firstName" class="text-light">firstName</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="firstName" value="<%= user.firstName %>" placeholder="Rafay">
        </div>
        <div class="form-group">
            <label for="lastName" class="text-light">lastName</label>
            <input type="text" name="lastName" value="<%= user.lastName %>" placeholder="Shaikh">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">email</label>
            <input type="text" name="email" value="<%= user.email %>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="password" class="text-light">password</label>
            <input type="text" name="password" value="<%= user.password %>" placeholder="password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
